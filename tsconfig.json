{
  "compilerOptions": {
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "module": "nodenext",
    "downlevelIteration": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "typeRoots": [
      "src/types",
      "node_modules/@types"
    ],
  },
  "exclude": [
    "node_modules",
    "dist",
    "js"
  ]
}